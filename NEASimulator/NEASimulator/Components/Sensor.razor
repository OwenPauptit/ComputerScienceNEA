
<img class="draggable"
        src="@sensor.ImageSrc"
        @onclick="@((args) => Parent.SensorClick(sensor))"
        @onmousemove="@((sensor as NEASimulator.Models.Draggable).SetPositionToMouse)"
        style="position:absolute; @sensor.Style_Position" />

@code {
    [Parameter]
    public Interfaces.ISensor sensor { get; set; }

    [Parameter]
    public Simulation Parent { get; set; }


}
