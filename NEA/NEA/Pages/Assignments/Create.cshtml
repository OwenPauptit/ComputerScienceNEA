@model NEA.Pages.Assignments.CreateModel

@{
    ViewData["Title"] = "Create Assignment";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Create</h1>

<h4>Class Assignment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ClassAssignmentVM.SimulationID" class="control-label"></label>
                <select asp-for="ClassAssignmentVM.SimulationID" class ="form-control" asp-items="Model.SimulationNamesSL"></select>
