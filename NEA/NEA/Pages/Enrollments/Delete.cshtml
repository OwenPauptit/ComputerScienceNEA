@page
@model NEA.Pages.Enrollments.DeleteModel

@{
    ViewData["Title"] = "Unenroll";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Unenroll</h1>

<h3>Are you sure you want to unenroll from this classroom?</h3>
<div>
    <h4>Enrollment</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Classroom.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Classroom.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Enrollment.Classroom.Teacher)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Enrollment.Classroom.Teacher.LastName)
        </dd>
    </dl>
    
    <form method="post">
        <input type="hidden" asp-for="Enrollment.NEAUserId" />
        <input type="hidden" asp-for="Enrollment.ClassroomID" />
        <input type="submit" value="Unenroll" class="btn btn-danger" /> |
        <a asp-page="/Classes/Index">Back to List</a>
    </form>
</div>
